<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="pro112.englishforbeginner.TestActivity"
    android:orientation="vertical">
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="20"
        android:minHeight="15dp"
        android:minWidth="200dp"
        android:progress="1" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imgTest"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/farmer"
        android:visibility="visible"
        android:layout_weight="0.3" />
    <ImageButton
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:padding="100dp"
        android:src="@mipmap/ic_sound"
        android:tint="@color/blue"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:layout_weight="0.3"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />

    <me.grantland.widget.AutofitTextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/txtTest"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trượt Tuyết"
        android:singleLine="false"
        android:maxLines="4"
        android:textSize="36sp"
        autofit:minTextSize="16sp"
        android:layout_weight="0.3"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Previous"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnA"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowColor="@color/blue_light"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp" />

            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Previous"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnB"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowColor="@color/blue_light"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp" />

            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Previous"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnC"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowColor="@color/blue_light"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp" />

            <info.hoang8f.widget.FButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Previous"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/btnD"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowColor="@color/blue_light"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
